APP_NAME="Gifamz Store"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://api.ggtl.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Production Database (Railway will provide these)
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

JWT_SECRET=YOUR_JWT_SECRET_HERE

# Production Mail Settings
MAIL_MAILER=smtp
MAIL_HOST=quovatech.com
MAIL_PORT=587
MAIL_USERNAME=support@quovatech.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD_HERE
MAIL_FROM_ADDRESS=support@quovatech.com
MAIL_FROM_NAME="Gifamz Store"

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=database

# Paystack Configuration
PAYSTACK_PUBLIC_KEY=pk_test_YOUR_PUBLIC_KEY_HERE
PAYSTACK_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
PAYSTACK_PAYMENT_URL=https://api.paystack.co

# Frontend URL for CORS
FRONTEND_URL=https://ggtl.com
MAIL_ADMIN_EMAIL=hello@weanadglobal.info

# CORS and Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=ggtl.com,www.ggtl.com,api.ggtl.com
